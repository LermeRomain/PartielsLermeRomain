{% extends 'post/index.html.twig'%}
{% block title %}Feed{% endblock %}



{% block body %}
    {% for message in app.flashes('message') %}
        <div class="alert alert-success" role="alert" style="margin-top: 80px">
            {{ message }}
        </div>
    {% endfor %}
    <div class="d-grid gap-2 col-6 mx-auto " style="margin-top: 80px">
        <a class="btn btn-primary" type="button" href="{{ path('ajout_post') }}">Nouveau Post</a>
    </div>
    {% for post in posts %}
        <div class="list-group">
            <div class="container col-6">
                <a href="#" class="list-group-item list-group-item-action" aria-current="true" style="margin-top: 50px">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ post.user.firstName }}</h5>
                        <small>{{ post.createdAt|date('d-m-Y') }}</small>
                    </div>
                    <p class="mb-1">{{ post.name }}</p>
                    <small>{{ post.user.city }}</small>
                </a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
