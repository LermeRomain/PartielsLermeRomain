{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid row">
        <div class="container col-4">
            <h1>Register</h1>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
        </div>
        <div class="container col-4">
            {{ form_row(registrationForm.birthDate) }}
            {{ form_row(registrationForm.address) }}
            {{ form_row(registrationForm.city) }}
            {{ form_row(registrationForm.alternanceJob) }}
            {{ form_row(registrationForm.groupName) }}
            {{ form_row(registrationForm.agreeTerms) }}
        </div>
    </div>
    <div class="container offset-7">
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
        {{ form_end(registrationForm) }}
    </div>



{% endblock %}
